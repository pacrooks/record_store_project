<h1><%= @heading %></h1>
<form action="<%= @action %>" method="post">
  <table>
    <tr>
      <td class="tab-head"><label for="name">Name:</label></td>
      <td><input type="text" name="name" <%= "value=\"#{@artist.name}\"" if @artist.name %>></td>
    </tr>
    <tr>
      <td class="tab-head"><label for="genre">Genre:</label></td>
      <td>
        <input list="genre_list" name="genre"
        <%= "value=\"#{@artist.genre}\"" if @artist.genre %>>
        <datalist id="genre_list">
          <% @genre.each do | gen | %>
          <option value="<%= gen %>">
          <% end %>
        </datalist>
      </td>
    </tr>
    <tr>
      <td align="right" colspan="2"><input type="submit" class="button" value="<%= @button_text %>" ></td>
    </tr>
  </table>
</form>