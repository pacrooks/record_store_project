<h1>Albums</h1>
<table>
  <tr>
    <td><a href="/albums/new">New Album</a></td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td><a href="/artists">View Artists</a></td>
  </tr>
  <% @albums.each do | album | %>
  <tr>
    <td class="tab-head"><%= album.name %></td>
    <td class="tab-head"><%= Artist.by_id(album.artist_id).name %></td>
    <td><a href="/albums/<%= album.id.to_s %>/edit">Edit</a></td>
    <td><a href="/stocks/new?album=<%= album.id.to_s %>">New Stock</a></td>
  </tr>
  <% end %>
</table>